<% if (!question_index) { %>
<% var question_index = 1; %>
<% } %>

<div class="panel panel-primary">
    <div class="panel-heading well-data-list">
        <h4 class="panel-title"><span class="new-quiz-title">Question <%= question_index %></span>
            <button class="toggle-questions pull-right btn btn-info btn-lg" type="button" data-toggle="collapse" data-target="#collapse<%= question_index %>" aria-expanded="false" aria-controls="collapseExample">
                <span class="fa fa-chevron-up"></span> Close
            </button>
        </h4>
    </div>
    <div id="collapse<%= question_index %>" class="panel-collapse collapse in">
        <div class="form-group">
            <textarea type="text" class="quiz-question form-control col-sm-5" placeholder="Quiz question"></textarea>
            <textarea type="text" class="quiz-answer form-control col-sm-5" placeholder="Quiz answer A"></textarea>
            <textarea type="text" class="quiz-answer form-control col-sm-5" placeholder="Quiz answer B"></textarea>
            <textarea type="text" class="quiz-answer form-control col-sm-5" placeholder="Quiz answer C"></textarea>
            <textarea type="text" class="quiz-answer form-control col-sm-5" placeholder="Quiz answer D"></textarea>
        </div>
    </div>
</div>
